    <h1>Products in category: <%= category %></h1>
    <ul>
        <% products.forEach(product => { %>
            <li><%= product.name %> - <%= product.price %></li>
        <% }) %>
    </ul>
    <div id="FirstLine">
        <div id="symbol">
            <button id="search"><i class="bi bi-search"></i></button>
            <button id="snow"><i class="bi bi-snow2"></i></button>
            <button id="cart"><i class="bi bi-cart"></i></button>
        </div>
        <div id="label"> SkiDis</label></div>
        <button id="list">
            <i class="bi bi-list"></i>
            <ul></ul>
        </button>
    </div>

    <button class="filtering" id="slides">
        <i class="bi bi-sliders"></i>   סנן לפי
    </button>
    <div class="filter-box">
        <h1 id="header_main">סנן לפי</h1>
        <h2 id="header">category 1</h2>
        <hr class="line">
        <h3 id="header">category 2</h3>
        <hr class="line">
        <h4 id="header">New</h4>
        <hr class="line">
        <h5 id="header">Color</h5>
        <hr class="line">
        <h6 id="header">Size</h6>
    </div>

    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">Choose option</button>
        <ul class="dropdown-menu">
            </li>
            <li><a class="dropdown-item" href="#">Sort by most recent</a></li>
            <li><a class="dropdown-item" href="#">Sort from cheap to expensive</a></li>
            <li><a class="dropdown-item" href="#">Sort from expensive to cheap</a></li>
        </ul>
    </div>

    <div class="container_main">
        <div class="main_header_category"><%= category %></div>
        <hr class="line">
    </div>
    <div id="cards" class="d-flex flex-wrap">
    <% products.forEach(product => { %>
        <div class="card" style="width: 18rem; margin: 10px;">
            <a href="/singleproduct?MyId=<%= product.MyId %>">
                <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                    <p class="card-text1"><%= product.name %></p>
                    <p class="card-text2"><b>Price:</b> <%= product.price %></p>
                </div>
            </a>
        </div>
    <% }) %>
</div>


