<body>
    <div id="topLine">
        <p id="title"> SkiDis </p>
        <button id="cartBtn" type="button" class="btn btn-light">
            <i class="bi bi-cart"></i>
        </button>  
        <button id="logInBtn" type="button" class="btn btn-light">
        <i class="bi bi-person-circle"></i>
        </button>
        <div >
            <div id="logInCard" class="card text-center mb-3" style="width: 18rem;">
                <div class="card-body">
                  <h5 class="card-title">LOGIN</h5>
                  <p>User Name*</p>
                  <input type="text" placeholder="User Name">
                  <p>Password*</p>
                  <input type="text" placeholder="Password">
                  <a href="#" class="btn btn-primary">login</a>
                </div>
              </div>
        </div>
        <div >
            <div id="cartCard" class="card text-center mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">YOUR SHOPING CART</h5>
                    <ul id="cartItems"></ul>
                    <p id="emptyCartMessage">Your cart is empty.</p>
                </div>
            </div>        
        </div>
        <div id="menu">
                <a id="homePage-link" href="/">Home</a>
                <a id="ski-products-link" href="#">Ski Products</a>
                <a id="clothes-link" href="#">Clothes</a>
                <a id="accessories-link" href="#">Accessories</a>
                <a id="manager-link" href="/manager">manager entry</a>
        </div>
        <div id="searchItem">
            <input type="text" id="searchBox" placeholder="Search for a product">
            <button id="searchButton" type="button">Search</button>
        </div>
    </div>

    <button class="filtering" id="slides">
        <i class="bi bi-sliders"></i>   סנן לפי
    </button>
    <div class="filter-box">
        <h1 id="header_main">סנן לפי</h1>
        <h2 id="header">category 1</h2>
        <hr class="line">
        <h3 id="header">category 2</h3>
        <hr class="line">
        <h4 id="header">New</h4>
        <hr class="line">
        <h5 id="header">Color</h5>
        <hr class="line">
        <h6 id="header">Size</h6>
    </div>

    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">Choose option</button>
        <ul class="dropdown-menu">
            </li>
            <li><a class="dropdown-item" href="#">Sort by most recent</a></li>
            <li><a class="dropdown-item" href="#">Sort from cheap to expensive</a></li>
            <li><a class="dropdown-item" href="#">Sort from expensive to cheap</a></li>
        </ul>
    </div>

 <div class="container_main">
    <div class="main_header_category"><%= selectedCategory %></div>
    <hr class="line">
</div>
<div id="cards" class="d-flex flex-wrap">
    <% products.forEach(product => { %>
        <div class="card" style="width: 18rem; margin: 10px;">
            <a href="#" class="product-link" data-id="<%= product.MyId %>" data-category="<%= selectedCategory %>">
                <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                <div class="card-body">
                    <p class="card-text1"><%= product.name %></p>
                    <p class="card-text2"> <%= product.price %>₪</p>
                </div>
            </a>
        </div>
    <% }) %>
</div>

