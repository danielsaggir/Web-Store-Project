

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles/products.css">
    <link rel="stylesheet" href="/styles/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
</head>

<body>
    <div id="topLine">
        <p id="title">SkiDis</p>
        <button id="cartBtn" type="button" class="btn btn-light">
            <i class="bi bi-cart"></i>
        </button>
        <button id="logInBtn" type="button" class="btn btn-light">
            <i class="bi bi-person-circle"></i>
        </button>
        <div>
            <div id="logInCard" class="card text-center mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">LOGIN</h5>
                    <p>User Name*</p>
                    <input type="text" placeholder="User Name">
                    <p>Password*</p>
                    <input type="password" placeholder="Password">
                    <a href="#" class="btn btn-primary">Login</a>
                </div>
            </div>
        </div>
        <div>
            <div id="cartCard" class="card text-center mb-3" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">YOUR SHOPPING CART</h5>
                    <ul id="cartItems"></ul>
                    <p id="emptyCartMessage">Your cart is empty.</p>
                </div>
            </div>
        </div>
        <div id="menu">
            <a id="homePage-link" href="/">Home</a>
            <a id="ski-products-link" href="#">Ski Products</a>
            <a id="clothes-link" href="#">Clothes</a>
            <a id="accessories-link" href="#">Accessories</a>
            <a id="manager-link" href="/manager">Manager Entry</a>
        </div>
        <div id="searchItem">
            <input type="text" id="searchBox" placeholder="Search for a product">
            <button id="searchButton" type="button">Search</button>
        </div>
    </div>

    <div class="filter-box">
        <h1 id="header_main">Filter By</h1>
        <h4 id="header">Color</h4>
        <hr class="line">
        <h5 id="header">Size</h5>
        <hr class="line">
        <h6 id="header">Price</h6>
    </div>

    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown"
            aria-expanded="false">Sort by</button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/products?category=<%= selectedCategory %>&sort=price_asc">Price
                    ascending</a></li>
            <li><a class="dropdown-item" href="/products?category=<%= selectedCategory %>&sort=price_desc">Price
                    descending</a></li>
        </ul>
    </div>

    <div class="container_main">
        <div id="cards" >
            <% products.forEach(product => { %>
            <div class="card" style="width: 18rem; margin: 10px;">
                <a href="#" class="product-link" data-id="<%= product.MyId %>" data-category="<%= selectedCategory %>">
                    <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>">
                    <div class="card-body">
                        <p class="card-text1"><%= product.name %></p>
                        <p class="card-text2"> <%= product.price %>â‚ª</p>
                    </div>
                </a>
            </div>
            <% }) %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="home.js"></script>
    <script src="products.js"></script>
</body>

</html>
