<div id="topLine">
    <p id="title"> SkiDis </p>
    <button id="menuButton" type="button" class="btn btn-light">
        <i class="bi bi-list"></i> 
    </button>
    <button id="cartBtn" type="button" class="btn btn-light">
        <i class="bi bi-cart"></i>
    </button>  
    <button id="logInBtn" type="button" class="btn btn-light">
    <i class="bi bi-person-circle"></i>
    </button>
    <div >
        <div id="logInCard" class="card text-center mb-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title">LOGIN</h5>
              <p>User Name*</p>
              <input type="text" placeholder="User Name">
              <p>Password*</p>
              <input type="text" placeholder="Password">
              <a href="#" class="btn btn-primary">login</a>
            </div>
          </div>
    </div>
    <div id="menu">
        <ul>
            <li><a id="ski-products-link" href="#">Ski Products</a></li>
            <li><a id="clothes-link" href="#">Clothes</a></li>
            <li><a id="accessories-link" href="#">Accessories</a></li>
        </ul>
    </div>
</div>

    <div id="MainLine">
        <div >
            <div id="cartCard" class="card text-center mb-3" style="width: 30rem;">
                <div class="card-body">
                    <h5 class="card-title">YOUR SHOPING CART</h5>
                    <ul id="cartItems"></ul>
                    <p id="emptyCartMessage">Your cart is empty.</p>
                    <p id="totalAmount">Total: 0 ₪</p>
                </div>
                <button type="button" id="checkOut" class="btn btn-secondary btn-lg";" >check out</button>     
            </div>   
        </div>
        <div id="productimg">
            <img id="img" src="<%= product.imageUrl %>" alt="<%= product.name %>">
        </div>
          <div id="Productinfo">
            <h2 id="name"><%= product.name %></h2>
            <h8 id="info"><%= product.description %>.</h8>
            <h8 id="price"><%= product.price %> ₪</h8>
            <div id="size">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color:whitesmoke;color: black;">
                        Select Size
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" data-size="Small">Small</a></li>
                        <li><a class="dropdown-item" href="#" data-size="Medium">Medium</a></li>
                        <li><a class="dropdown-item" href="#" data-size="Large">Large</a></li>
                        <li><a class="dropdown-item" href="#" data-size="X-Large">X-Large</a></li>
                        <li><a class="dropdown-item" href="#" data-size="XX-Large">XX-Large</a></li>
                    </ul>
                </div>
            </div>
            <button type="button" id="addto" class="btn btn-secondary btn-lg";" >Add to cart</button>
            
          </div>
    </div>
    <script src="Singelproduct.js"></script>
    <script src="home.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script> 
</body>
</html>
